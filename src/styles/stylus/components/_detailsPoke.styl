.modal
	display flex
	justify-content center
	align-items center
	position fixed
	top 0
	bottom 0
	z-index 2
	background alpha(color_darck, 90%)
.overlay
.card
	width 100%
	height 100%
	display grid
	position relative
	overflow-x scroll
	background color_one
	color color_two
.card_close
	width 4rem
	height 4rem
	background alpha(color_two, 30%)
	color color_two
	position absolute
	top 1rem
	right 1rem
	border-radius 50%
	text-align center
	font-family font_one
	font-size font_size_big
	z-index 3
	&:active
		background alpha(color_two, 50%)
.card_img
	img
		max-width 25rem
		background color_two
		border-radius 0 0 2rem 0
.card_details, .card_description, .card_stats
	margin 0
	padding 2rem
	padding-top 0
	h2
		font-family font_one
		font-size font_size_big
		&:first-letter
			text-transform uppercase
	h3
		font-family font_one
		font-size font_size_two
		line-height 2.5rem
	&-status
		padding 2rem
	p
		margin-bottom 1rem
		font-family font_one
		font-size font_size_two
		font-weight 300
.card_details
	span
		display inline-block
		font-weight 600
		&:first-letter
			text-transform uppercase
.card_stats
	span
		font-family font_one
		font-size font_size_two
		font-weight 600