.pokemons_wrap
	grid-template-columns repeat(3,1fr)
.card
	max-width 80%
	max-height 80%
	overflow initial
	border-radius 2rem
	box-shadow 0 0 1rem 0 #313131
	grid-template-columns repeat(2, 1fr)
	grid-template-rows auto 1fr
.card_description
	margin-top 5rem
.card_img
	img
		border-radius 2rem
@keyframes zoom
	from
		transform scale(1)
	to
		transform scale(1.1)