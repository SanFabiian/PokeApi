.modal_wrap
	display none
	justify-content center
	align-items center
	background-color rgba(0,0,0,.4)
	position fixed
	top 0
	right 0
	bottom 0
	left 0
.modal
	width 80%
	height 50%
	position relative
	background-color white
	padding: 2.5em
	box-shadow 0 .4em grey
	border-radius 1.2em
	&_close
		position absolute
		top 7rem
		right 7rem
		font-size 1.7em
		float right
		color white
		cursor pointer
.open
	display flex
.animationIn
	animation animationIn .5s
.animationOut
	animation animationOut .5s forwards
.opacityIn
	animation opacityIn 1s
.opacityOut
	animation opacityOut 1s .5s forwards
@keyframes animationIn
	from
		transform translateY(-800px)
	60%
		transform translateY(25px)
	80%
		transform translateY(-25px)
	to
		transform translateY(0)
@keyframes animationOut
	from
		transform translateY(0)
	60%
		transform translateY(-25px)
	80%
		transform translateY(25px)
	to
		transform translateY(-800px)
@keyframes opacityIn
	from
		opacity 0
	to
		opacity 1
@keyframes opacityOut
	from
		opacity 1
	to
		opacity 0